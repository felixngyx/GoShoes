{
	"files": [],
	"references": [
		{ "path": "./tsconfig.app.json" },
		{ "path": "./tsconfig.node.json" }
	],
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"@/*": ["./*"],
			"@components/*": ["./src/components/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@store/*": ["./src/store/*"],
			"@utils/*": ["./src/utils/*"],
			"@assets/*": ["./src/assets/*"],
			"@services/*": ["./src/services/*"]
		},
		"module": "esnext",
		"moduleResolution": "node",
		"lib": ["ES2015", "DOM"],
		"target": "ES2015",
		"skipLibCheck": true,
		"composite": false
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["node_modules"]
}
